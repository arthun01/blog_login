<% content_for :title, "Editing post" %>

<div class="md:w-2/3 w-full p-8">
  <h1 class="font-bold text-4xl">Editar Postagem</h1>

  <%= render "form", post: @post %>

  <%= link_to "Mostrar essa Postagem", @post, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Voltar as Postagens", posts_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
